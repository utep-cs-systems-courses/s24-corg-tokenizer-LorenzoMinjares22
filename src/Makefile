#define bariable $(OBJS) to list of object files
OBJS = history.o tokenizer.o tester.o

# make has a "default rule" specifying how to build a an "object" file (.o) from a C source file (.c)

#            this rule includes $(CFLAGS) as one of cc's parameters

CFLAGS=-g -O3 # -g for debug, -O3 for optimization


all: historytokens

historytokens: $(OBJS)
	cc -o historytokens $(CFLAGS) $(OBJS)

#all objects files vuild from c files that include history.h and tokenizer.h
$(OBJS): history.h tokenizer.h

#deletes flies generated by compilartion

clean:
	rm -f *.o *.c# *.c~ historytokens

run:historytokens
	./historytokens


